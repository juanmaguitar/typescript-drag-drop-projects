{
  "name": "understanding-typescript",
  "version": "1.0.0",
  "description": "Understanding TypeScript Course Setup",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "copy:dist": "copyfiles -u 1 'src/*.{html,css}' dist",
    "start": "tsc && npm run copy:dist && lite-server --baseDir=dist",
    "dev": "npm run copy:dist && concurrently \"tsc --watch\" \"lite-server --baseDir=dist\"",
    "build": "tsc && npm run copy:dist"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "concurrently": "^8.0.0",
    "lite-server": "^2.5.4",
    "typescript": "^5.6.3"
  }
}
